Zadanie #1

#include <iostream>
using namespace std;



struct date
{
	int day;
	int month;
	int year;
};
struct statementOfExam
{
	char subject[25];
	int NumOfGroup;
	date *dayOfExam;
};

struct student
{
	char surname[20];
	int numberOfExamList;
	int examMark;
};

student input_student()
{
	student s;
	cout << "Input surname "; cin >> s.surname; cout << endl;
	cout << "Input Number of Exam list "; cin >> s.numberOfExamList; cout << endl;
	cout << "Input exam Mark "; cin >> s.examMark; cout << endl;
	return s;
}

statementOfExam input_dataOfStatementOfExam()
{
	statementOfExam st;
	cout << "Input subject "; cin >> st.subject; cout << endl;
	cout << "Input num Of group "; cin >> st.NumOfGroup; cout << endl;
	cout << "Input date of Exam "; cin >> st.dayOfExam->day; cout << endl;
	return st;
}

void output_dataOFstudents(student f)
{
	cout << "surname: " << f.surname << endl;
	cout << "nubmer of examlist: " << f.numberOfExamList << endl;
	cout << "exam mark: " << f.examMark << endl;
}


int main()
{
	student *stud;
	stud = &(input_student());

	output_dataOFstudents(*stud);

	date dt;
	dt.day = 5;
	dt.month = 6;
	dt.year = 2018;

	system("pause");
	return 0;
}

Zadanie #2

#include <iostream>
using namespace std;

struct complex
{
	float re;
	float im;
};

complex read()
{
	complex a;
	cout << "Input Real part : "; cin >> a.re; cout << endl;
	cout << "Input Imagine part : "; cin >> a.im; cout << endl;
	return a;
}

void print(complex cmp)
{
	char sign = '+';
	if (cmp.im < 0) sign = '-';
	cout << "Complex number: Z=" << cmp.re << sign << abs(cmp.im) << 'i' << endl;
}

void add(complex a, complex b)
{
	float sum_re, sum_im;
	sum_re = (a.re + b.re); sum_im = (a.im + b.im);
	char sign = '+';
	if (sum_im < 0) sign = ' ';
	cout << "Sum = " << sum_re << sign << sum_im << 'i' << endl;
}


int main()
{
	complex a, b;
	a = read();
	b = read();
	print(a);
	print(b);
	add(a, b);


	system("pause");
	return 0;
}


Zadanie #3


#include <iostream>
using namespace std;

struct Perfomance {
	int mark;
};

struct Student {
	char surname[15];
	char name[15];
	char patronymic[15];
	int age;
	int degree;
	Perfomance marks[3];
};

void input(Student*student, int n) {
		for (int i = 0; i < n; i++) {
			cout << "Student #" << i + 1 << " : " << endl;
			cout << "  -Input surname of student : "; cin >> student[i].surname;
			cout << "  -Input name of student : "; cin >> student[i].name;
			cout << "  -Input patronymic of student : "; cin >> student[i].patronymic;
			cout << "  -Input the age of " << student[i].surname <<" "<< student[i].name<<" "<< student[i].patronymic << " : "; cin >> student[i].age;
			cout << "  -Input the number of degree for " << student[i].surname << " " << student[i].name << " " << student[i].patronymic << " : "; cin >> student[i].degree;
			cout << "  -Input the marks of " << student[i].surname << " " << student[i].name << " " << student[i].patronymic << endl;
			for (int k = 0; k < 3; k++) {
				cout << k+1 << " mark : "; cin >> student[i].marks[k].mark;
			}
		}
};

double averageMark(Student*student, int n,int course) {
	
	double averageAnswer=0;
	int k = 0;
	
	for (int i = 0; i < n; i++) {
		double averageSum = 0;
		if (student[i].degree == course) {
			k++;
			for (int k = 0; k < 3; k++) { averageSum += student[i].marks[k].mark; }
			averageSum /= 3.0;
		}
		averageAnswer += averageSum;
	}
	if (k==0) { return averageAnswer; }
		averageAnswer /= k;
		return averageAnswer;
}

int main() {
	int n;
	cout << "Input cout of students : "; cin >> n;
	Student*student;
	student = new Student[n];

	input(student, n);

	int course;
	cout << "Input the number of degree to find average mark : "; cin >> course;
	if (averageMark(student, n, course) == 0) cout << "No students on this degree ." << endl; 
	else { cout << "Average mark for students of " << course << " course = " << averageMark(student, n, course) << endl; }
	system("pause");
	return 0;
}
