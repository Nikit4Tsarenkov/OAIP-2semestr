Zadanie #1

#include <iostream>
using namespace std;



struct date
{
	int day;
	int month;
	int year;
};
struct statementOfExam
{
	char subject[25];
	int NumOfGroup;
	date *dayOfExam;
};

struct student
{
	char surname[20];
	int numberOfExamList;
	int examMark;
};

student input_student()
{
	student s;
	cout << "Input surname "; cin >> s.surname; cout << endl;
	cout << "Input Number of Exam list "; cin >> s.numberOfExamList; cout << endl;
	cout << "Input exam Mark "; cin >> s.examMark; cout << endl;
	return s;
}

statementOfExam input_dataOfStatementOfExam()
{
	statementOfExam st;
	cout << "Input subject "; cin >> st.subject; cout << endl;
	cout << "Input num Of group "; cin >> st.NumOfGroup; cout << endl;
	cout << "Input date of Exam "; cin >> st.dayOfExam->day; cout << endl;
	return st;
}

void output_dataOFstudents(student f)
{
	cout << "surname: " << f.surname << endl;
	cout << "nubmer of examlist: " << f.numberOfExamList << endl;
	cout << "exam mark: " << f.examMark << endl;
}


int main()
{
	student *stud;
	stud = &(input_student());

	output_dataOFstudents(*stud);

	date dt;
	dt.day = 5;
	dt.month = 6;
	dt.year = 2018;

	system("pause");
	return 0;
}

Zadanie #2

#include <iostream>
using namespace std;

struct complex
{
	float re;
	float im;
};

complex read()
{
	complex a;
	cout << "Input Real part : "; cin >> a.re; cout << endl;
	cout << "Input Imagine part : "; cin >> a.im; cout << endl;
	return a;
}

void print(complex cmp)
{
	char sign = '+';
	if (cmp.im < 0) sign = '-';
	cout << "Complex number: Z=" << cmp.re << sign << abs(cmp.im) << 'i' << endl;
}

void add(complex a, complex b)
{
	float sum_re, sum_im;
	sum_re = (a.re + b.re); sum_im = (a.im + b.im);
	char sign = '+';
	if (sum_im < 0) sign = ' ';
	cout << "Sum = " << sum_re << sign << sum_im << 'i' << endl;
}


int main()
{
	complex a, b;
	a = read();
	b = read();
	print(a);
	print(b);
	add(a, b);


	system("pause");
	return 0;
}


Zadanie #3


#include <iostream>
using namespace std;

struct student
{
	char name[10];
	char surname[15];
	int age;
	int course;
	int mark_math;
	int mark_physics;
	int mark_biology;
};
student read()
{
	student s;
	cout << "Name: ";
	cin >> s.name;
	cout << "Surname: ";
	cin >> s.surname;
	cout << "Age: ";
	cin >> s.age;
	cout << "Course: ";
	cin >> s.course;
	cout << "Math: ";
	cin >> s.mark_math;
	cout << "Physics: ";
	cin >> s.mark_physics;
	cout << "Biology: ";
	cin >> s.mark_biology;
	return s;
}
void StudentInfo(student s)
{
	cout << "Full name : " << s.name << " " << s.surname << endl;
	cout << "Age : " << s.age << endl;
	cout << "Course : " << s.course << endl;
	cout << "Math mark : " << s.mark_math << endl;
	cout << "Physics mark : " << s.mark_physics << endl;
	cout << "Biology mark : " << s.mark_biology << endl;
	cout << "__________________" << endl << endl;
}
void OutputStudent()
{
	const int n = 3;
	int amountMath, amountPhysics, amountBiology = 0;
	student arr[n];
	for (int i = 0; i < n; i++)
	{
		arr[i] = read();
	}
	for (int i = 0; i < n; i++)
	{
		StudentInfo(arr[i]);
	}


	for (int j = 0; j < 4; j++)
	{
		amountMath = 0;
		for (int i = 0; i < n; i++)
		{
			if (arr[i].course == j + 1)
			{
				if (arr[i].mark_math < 4)
				{
					amountMath++;
				}
			}
		}
		cout << "Amount of lowskill students of " << j + 1 << " course at math: " << amountMath << endl;
	}
	cout << endl;
	for (int j = 0; j < 4; j++)
	{
		amountPhysics = 0;
		for (int i = 0; i < n; i++)
		{
			if (arr[i].course == j + 1)
			{
				if (arr[i].mark_physics < 4)
				{
					amountPhysics++;
				}
			}
		}
		cout << "Amount of lowskill students of " << j + 1 << " course at physics: " << amountPhysics << endl;
	}
	cout << endl;
	for (int j = 0; j < 4; j++)
	{
		amountBiology = 0;
		for (int i = 0; i < n; i++)
		{
			if (arr[i].course == j + 1)
			{
				if (arr[i].mark_biology < 4)
				{
					amountBiology++;
				}
			}
		}
		cout << "Amount of lowskill students of " << j + 1 << " course at biology: " << amountBiology << endl;
	}
	cout << endl;
}

int main()
{
	OutputStudent();

	cout << endl;

	system("pause");
	return 0;
}

