Zadanie #1

#include <iostream>
using namespace std;



struct date
{
	int day;
	int month;
	int year;
};
struct statementOfExam
{
	char subject[25];
	int NumOfGroup;
	date *dayOfExam;
};

struct student
{
	char surname[20];
	int numberOfExamList;
	int examMark;
};

student input_student()
{
	student s;
	cout << "Input surname "; cin >> s.surname; cout << endl;
	cout << "Input Number of Exam list "; cin >> s.numberOfExamList; cout << endl;
	cout << "Input exam Mark "; cin >> s.examMark; cout << endl;
	return s;
}

statementOfExam input_dataOfStatementOfExam()
{
	statementOfExam st;
	cout << "Input subject "; cin >> st.subject; cout << endl;
	cout << "Input num Of group "; cin >> st.NumOfGroup; cout << endl;
	cout << "Input date of Exam "; cin >> st.dayOfExam->day; cout << endl;
	return st;
}

void output_dataOFstudents(student f)
{
	cout << "surname: " << f.surname << endl;
	cout << "nubmer of examlist: " << f.numberOfExamList << endl;
	cout << "exam mark: " << f.examMark << endl;
}


int main()
{
	student *stud;
	stud = &(input_student());

	output_dataOFstudents(*stud);

	date dt;
	dt.day = 5;
	dt.month = 6;
	dt.year = 2018;

	system("pause");
	return 0;
}

Zadanie #2

#include <iostream>
using namespace std;

struct complex {
	float re;
	float im;
};

complex read() {
	complex x;
	cout << "Input re of number: "; cin>>x.re;
	cout << "Input im of number: "; cin >> x.im;
	return x;
}
void print(complex s) {
	cout << s.re << " + " << s.im << "i"<< endl;
}

complex add(complex a, complex b) {
	complex x;
	x.im = a.im + b.im;
	x.re = a.re + b.re;
	return x;
}

int main() {
	complex z1, z2;
	z1 = read();
	z2 = read();
	cout << "z1 = "; print(z1);
	cout << "z2 = "; print(z2);
	cout << "-----------\n";
	complex z3= add(z1,z2);
	cout << "z1 + z2 = "; print(z3);
	system("pause");
	return 0;	
}

Zadanie #3

#include <iostream>
using namespace std;

struct student
{
	char name[10];
	char surname[15];
	int age;
	int course;
	void input();

	void output();

};

void student::input()
{
	cout << "Name: ";
	cin >> name;
	cout << "Surname: ";
	cin >> surname;
	cout << "Age: ";
	cin >> age;
	cout << "Course: ";
	cin >> course;

}
void student::output()
{
	cout << "Full name : " << name << " " << surname << endl;
	cout << "Age : " << age << endl;
	cout << "Course : " << course << endl;
	cout << "__________________" << endl << endl;
}

int main()
{
	int qua = 3;
	student*list = new student[qua];
	for (int i = 0; i < qua; i++){
		list[i].input();
	}
	cout << endl;

	for (int i = 0; i < qua; i++) {
		list[i].output();
	}

	int choice;
	cout << "Input course u want to know avarege age: "; cin >> choice;
	int count = 0;
	double average = 0;
	for (int i = 0; i < qua; i++)
	{
		if (list[i].course == choice) {
			average += list[i].age;
			count++;
		}
	}
	average /= count;
	if (average > 0)
	{
		cout << "Average age on course " << choice << " is " << average << endl;
	}
	else cout << "There's no students on this course " << endl;
	system("pause");
	return 0;
}
